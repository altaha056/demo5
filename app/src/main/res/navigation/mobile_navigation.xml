<?xml version="1.0" encoding="utf-8"?>
<!--pada file xml ini halaman tag navigation akan menentukan
layout dari fragmen mana yang akan ditampilkan ketika
activity dijalankan-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <!--mengarahkan activity untuk menampilkan layout dari
    fragment home-->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.demo5.ui.home.HomeFragment"
        android:label="Avengers"
        tools:layout="@layout/fragment_home" />

    <!--mengarahkan activity untuk menampilkan layout dari
    fragment gallery-->
    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.demo5.ui.gallery.GalleryFragment"
        android:label="X-Men"
        tools:layout="@layout/fragment_gallery" />

    <!--mengarahkan activity untuk menampilkan layout dari
    fragment slideshow-->
    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.demo5.ui.slideshow.SlideshowFragment"
        android:label="Guardians of the Galaxy"
        tools:layout="@layout/fragment_slideshow" />
</navigation>